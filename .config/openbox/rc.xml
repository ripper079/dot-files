    <!-- Mute/Unmute -->
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>
			sh -c 'amixer -q -D pulse set Master toggle; \
			mute_status=$(amixer -D pulse get Master | awk -F"[][]" "/Front Left: Playback/ {print \$4}"); \
			if [ "$mute_status" = "off" ]; then \
				notify-send -r 1234 -u normal "🔇 - Audio Muted"; \
			else \
				notify-send -r 1234 -u normal "🔊 - Audio Unmuted"; \
			fi'
		</command>
      </action>
    </keybind>
    <!-- Lower volume -->
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>
			sh -c 'audio_active=$(amixer -D pulse get Master | awk -F"[][]" "/Front Left: Playback/ {print \$4}"); \
			if [ "$audio_active" = "on" ]; then \
			amixer set Master 10%-; \
			volume=$(amixer get Master | awk -F"[][]" "/Front Left: Playback/ { print \$2 }"); \
			notify-send -r 1234 -u normal "Volume $volume"
			fi'
		</command>
      </action>
    </keybind>
