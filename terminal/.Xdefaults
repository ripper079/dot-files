! This is a comment
! Afer making changes to this file run
! xrdb .Xdefaults

! GLOBAL settings
! Color Section
*.background: #080808
*.foreground: #a5a5a5

! black
*.color0  : #0F0F12
*.color8  : #28282E
! red
*.color1  : #b02626
*.color9  : #b55454
! green
*.color2  : #40a62f
*.color10 : #78a670
! yellow
*.color3  : #f2e635
*.color11 : #faf380
! blue
*.color4  : #314ad0
*.color12 : #707fd0
! magenta
*.color5  : #b30ad0
*.color13 : #c583d0
! cyan
*.color6  : #32d0fc
*.color14 : #8adaf1
! white
*.color7  : #cbcfc7
*.color15 : #f5faf0

! URxvt settings
! Icon
URxvt.iconFile: /usr/share/icons/Papirus-Dark/64x64/apps/Terminal.svg

! Fonts
URxvt.font:           xft:Hack:size=10
! URxvt.boldFont:       xft:Hack Bold:size=10
! URxvt.italicFont:     xft:Hack Italic:size=10
! URxvt.boldItalicFont: xft:Hack Bold Italic:size=10
! Fix font space
URxvt.letterSpace: -1

! setting for  - X FreeType library
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.antialias: rgba
Xft.rgba: rgb

! Cursor
URxvt.cursorColor: #ff00ff
URxvt.cursorBlink: false
URxvt.cursorUnderline: false

! Scrollbar
! Scroll line-by-line, like in older rxvt terminal emulator.
URxvt.scrollstyle: rxvt
URxvt.scrollBar: false
! Activate the "urgent" flag for the window manager then termnal bell is triggered
URxvt.urgentOnBell: false

! disable ctrl+shift binding
URxvt.iso14755: false
URxvt.iso14755_52: false

